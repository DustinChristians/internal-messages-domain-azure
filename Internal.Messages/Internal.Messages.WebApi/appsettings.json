{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Internal.Messages.Repository": "Server=(localdb)\\mssqllocaldb;Database=InternalMessages;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "Enrich": [
      "FromLogContext",
      "WithAspnetcoreHttpcontext",
      "WithAssemblyName",
      "WithAssemblyVersion",
      "WithCorrelationId",
      "WithEnvironmentUserName",
      "WithExceptionDetails",
      "WithMachineName",
      "WithMemoryUsage",
      "WithProcessId",
      "WithProcessName",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Internal.Messages.Repository",
          "tableName": "EventLog",
          "autoCreateSqlTable": true,
          "batchPostingLimit": 5,
          "batchPeriod": "00:00:15",
          "columnOptionsSection": {
            "removeStandardColumns": [ "MessageTemplate" ]
          }
        }
      }
    ],
    "WriteTo:Async": {
      "Name": "Async",
      "Args": {
        "configure": [
          {
            "Name": "File",
            "Args": {
              "path": "../../EventLogs/",
              "rollingInterval": "Day"
            }
          }
        ]
      }
    }
  }
}
